<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.elegance.takeback"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="23" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon_feedback"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.elegance.takeback.Form_Creation"
            android:icon="@drawable/icon_feedback"
            android:label="Take Back Admin"
            android:theme="@style/AppTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.elegance.takeback.MainActivity"
            android:icon="@drawable/icon_feedback"
            android:label=" "
            android:theme="@style/AppTheme" >
            <intent-filter>
                <action android:name="com.elegance.feedback.MAINACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.elegance.takeback.AskCompanyDetails"
            android:label="Create Company"
            android:theme="@style/AppTheme" >
            <intent-filter>
                <action android:name="com.elegance.feedback.ASKCOMPANYDETAILS" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.elegance.takeback.preview"
            android:configChanges="orientation|keyboardHidden"
            android:label="Help us do better"
            android:theme="@style/AppTheme" >
            <intent-filter>
                <action android:name="com.elegance.feedback.PREVIEW" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.elegance.takeback.Load_Form"
            android:configChanges="orientation|keyboardHidden"
            android:label="Help us do better"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="com.elegance.feedback.LOAD_FORM" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.elegance.takeback.ChooseType"
            android:label="Choose Type"
            android:theme="@style/AppTheme" >
            <intent-filter>
                <action android:name="com.elegance.feedback.CHOOSETYPE" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.elegance.takeback.AddQuestion"
            android:label="Add Question"
            android:theme="@style/AppTheme" >
            <intent-filter>
                <action android:name="com.elegance.feedback.ADDQUESTION" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>